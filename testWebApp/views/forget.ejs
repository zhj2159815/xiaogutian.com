            <input class="form-control" id="password" name="password" type="password" placeholder="请输入密码" />
          </div>
          <div class="form-group">
            <input class="form-control" type="submit" value="登录" id="submitBtn" />
            <a class="textCenter" href="/forget">忘记密码</a>
          </div>
          <div class="form-group">
            <a class="textCenter" href="/register">暂无账号 点击注册</a>
          </div>

        </form>
      </div>
      <% include footer %>
  </div>
</body>
